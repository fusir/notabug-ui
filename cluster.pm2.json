{
  "apps": [
    {
      "name": "http",
      "exec_mode": "cluster",
      "instances": 1,
      "script": "./server.js",
      "env": { "NODE_ENV": "production" },
      "args": ["--peer", "https://notabug.io/gun", "--port", "3333", "--pistol", "--redis", "--render"]
    },
    {
      "name": "index",
      "exec_mode": "cluster",
      "instances": 1,
      "script": "./server.js",
      "env": { "NODE_ENV": "production" },
      "args": [
        "--peer",
        "http://localhost:3333/gun",
        "--evict",
        "--disableValidation",
        "--tabulate",
        "--index"
      ]
    }
  ]
}
